pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'ls'
                sh 'virtualenv venv -p python3.6'
                sh '. venv/bin/activate'
                sh 'venv/bin/pip install -r cosmos_django/requirements.txt'
                sh 'venv/bin/python3.6 cosmos_django/manage.py test -p *_test.py'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}