pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'chmod +x ./cosmos_django/jenkins_scripts/checkout.sh'
                sh './cosmos_django/jenkins_scripts/checkout.sh'
            }
        }
        stage('Test') {
            steps {
                sh 'chmod +x ./cosmos_django/jenkins_scripts/test.sh'
                sh './cosmos_django/jenkins_scripts/test.sh'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deplofying....'
            }
        }
    }
}